<h1><%=t :user_list %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%=t :name %></th>
      <th><%=t :registration_date %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= format_ja_date user.created_at %></td>
        <td><%= link_to 'Show', user %></td>
        <td><% if current_user && current_user.id == user.id %><%= link_to 'Edit', edit_user_path(user) %><% end %></td>
        <td><% if current_user && current_user.id == user.id %><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
