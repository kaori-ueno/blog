<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td><% if current_user.id == user.id %><%= link_to 'Show', user %><% end %></td>
        <td><% if current_user.id == user.id %><%= link_to 'Edit', edit_user_path(user) %><% end %></td>
        <td><% if current_user.id == user.id %><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

