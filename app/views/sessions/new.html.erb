<h3><%=t :login %></h3>

<%= form_for(@user, url: "/sessions") do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t(:name) %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label t(:password) %><br>
    <%= f.text_field :password, type: "password", class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit t(:login), class: "btn btn-primary" %>
  </div>
  <%= link_to t(:sign_up), new_user_path %>
<% end %>
