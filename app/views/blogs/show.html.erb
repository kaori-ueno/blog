<p id="notice"><%= notice %></p>

<h3><%= @blog.name %></h3>
<hr />
<% if @blog.articles.present? %>
  <% @blog.articles.each do |article| %>
    <div class="row">
      <div class="col-sm-12">
        <h4><%= link_to "#{article.title}", article %></h4>
        <div class="row">
          <div style="float:right"><small><%= format_ja_datetime article.created_at %></small></div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <%= format_text article.body %>
          </div>
        </div>
      </div>
    </div>
    <hr />
  <% end %>
<% else %>
  <div class="row">
    <div class="col-sm-12">
      <%=t :no_object, obj: t(:article) %>
    </div>
  </div>
  <hr />
<% end %>
<% if @blog.is_owner? current_user %>
  <%= link_to t(:write_object, obj: t(:article)), new_article_path(blog_id: @blog.id) %> |
  <%= link_to t(:edit_object, obj: t(:blog)), edit_blog_path(@blog)  %> |
<% end %>
<%= link_to t(:back), @blog.user %>
